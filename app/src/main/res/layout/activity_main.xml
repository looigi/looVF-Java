<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:background="#000000"
        tools:context=".MainActivity" >

        <LinearLayout
            android:id="@+id/layContenitore"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/layVideo"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgVideo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/video" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Video" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layPhoto"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgFoto"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/photo" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Foto" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layContGriglia"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgGriglia"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/griglia" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Griglia" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layRefresh"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgRefresh"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/refresh" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Refresh" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/laySettings"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgSettings"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/settings" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Settings" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layAbout"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgAbout"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/about" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="About" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/layCategorie"
                android:orientation="horizontal"
                android:weightSum="9"
                android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/Nero"
                    android:text="Categoria" />

                <Spinner
                    android:id="@+id/spnCategorie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />

                <ImageView
                    android:id="@+id/imgCambiaCategoria"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/seleziona"
                    android:layout_height="45dp" />

                <ImageView
                    android:id="@+id/imgRicercaFuori"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/ricerca"
                    android:layout_height="45dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/hsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtInfo"
                    android:layout_margin="2dp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/Bianco"
                    android:text="Refresh" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layScrollatore"
            android:layout_below="@+id/layContenitore"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layGriglia"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/imageGallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgPlayVideo"
                android:src="@drawable/seleziona"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- <VideoView
                android:id="@+id/myVideo"
                android:background="@drawable/wait"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <io.vov.vitamio.widget.VideoView
                android:id="@+id/myVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>-->

            <LinearLayout
                android:id="@+id/laySettingsPanel"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/chkRandom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Avanzamento random" />

                <Button
                    android:id="@+id/cmdCompatta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compatta DB" />
            </LinearLayout>

            <!-- <ImageView
                android:id="@+id/imgImmagine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" /> -->

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/imgImmagine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ImageView
            android:layout_below="@+id/layContenitore"
            android:id="@+id/imgLinguetta"
            android:layout_centerHorizontal="true"
            android:src="@drawable/linguetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgIndietro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/indietro" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAvanti"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/avanti" />
        </LinearLayout> -->
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/layScrollatore"
            android:id="@+id/imgRefreshGriglia"
            android:src="@drawable/refresh"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:id="@+id/layScroller"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layRicerca"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="300dp"
                android:weightSum="9"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_margin="2dp"
                    android:id="@+id/edtRicerca"
                    android:background="@color/Bianco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="" />

                <ImageView
                    android:id="@+id/imgRicerca"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ricerca" />

                <ImageView
                    android:id="@+id/imgUscitaRicerca"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/error" />
            </LinearLayout>

            <ListView
                android:id="@+id/lstRicerca"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgCondividi"
            android:layout_below="@+id/layContenitore"
            android:src="@drawable/condividi"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>