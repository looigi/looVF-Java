<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:background="#000000"
        tools:context=".MainActivity" >

        <LinearLayout
            android:id="@+id/layContenitore"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/layVideo"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgVideo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/video" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Video" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layPhoto"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgFoto"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/photo" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Foto" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layRefresh"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgRefresh"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/refresh" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Refresh" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/laySettings"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgSettings"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/settings" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Settings" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layAbout"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgAbout"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/about" />

                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="About" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/layCategorie"
                android:orientation="horizontal"
                android:weightSum="8"
                android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/Nero"
                    android:text="Categoria" />

                <Spinner
                    android:id="@+id/spnCategorie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />

                <ImageView
                    android:id="@+id/imgCambiaCategoria"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/seleziona"
                    android:layout_height="45dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/hsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtInfo"
                    android:layout_margin="2dp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/Bianco"
                    android:text="Refresh" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layContenitore"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPlayVideo"
                android:src="@drawable/seleziona"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- <VideoView
                android:id="@+id/myVideo"
                android:background="@drawable/wait"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <io.vov.vitamio.widget.VideoView
                android:id="@+id/myVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>-->

            <LinearLayout
                android:id="@+id/laySettingsPanel"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/chkRandom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Avanzamento random" />
            </LinearLayout>

            <!-- <ImageView
                android:id="@+id/imgImmagine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" /> -->

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/imgImmagine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ImageView
            android:layout_below="@+id/layContenitore"
            android:id="@+id/imgLinguetta"
            android:layout_centerHorizontal="true"
            android:src="@drawable/linguetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgIndietro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/indietro" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAvanti"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/avanti" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layCaricamento"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="300sp"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCaricamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <ProgressBar
                    android:id="@+id/pgrBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>